                <label> <input type="radio" checked="" value="optionGAS_Nao" name="checkGAS"> <i></i> Não </label>
            </div>
        </div>
    </div>
</div>
<div class="hr-line-dashed"></div>
<div class="row" id="rowAntiFurtoId">
    <div class="col-sm-12" id="divRespostaFurto">
        <div class="form-group">
            <font face="Palatino Linotype">
                @Html.LabelFor(model => model.FlagAntiFurto)
            </font>
            <div class="radio i-checks">
                <label> <input type="radio" value="optionFurto_Sim" name="checkFurto"> <i></i> Sim </label>
