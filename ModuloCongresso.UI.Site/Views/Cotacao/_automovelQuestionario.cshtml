@model ModuloCongresso.Application.ViewModels.Cotacao.QuestionarioViewModel

<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            <font face="Palatino Linotype">@Html.LabelFor(model => model.CepPernoite)</font> 
            @Html.EditorFor(model => model.CepPernoite, new {htmlAttributes = new {@class = "form-control margin-bottom-10", id = "CepPernoiteId"}})
            @Html.ValidationMessageFor(model => model.CepPernoite, "", new {@class = "text-danger"})
        </div>
    </div>
</div>
<div class="hr-line-dashed"></div>
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <font face="Palatino Linotype">
                @Html.LabelFor(model => model.RelacaoSegurado)
            </font>
            <div class="input-group">
                <select id="ddlRelacaoSeguradoId" tabindex="2"></select>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <font face="Palatino Linotype">
                @Html.LabelFor(model => model.FlagAlienado)
            </font>
            <div class="radio i-checks">
                <label> <input type="radio" value="optionLEAS_Sim" name="checkLeasing"> <i></i> Sim </label>
                <label> <input type="radio" checked="" value="optionLEAS_Nao" name="checkLeasing"> <i></i> Não </label>
            </div>
        </div>
    </div>
</div>
<div class="hr-line-dashed"></div>
<div class="row">
    <div class="col-sm-4">
