@model ModuloCongresso.Application.ViewModels.Cotacao.ItemViewModel

<div class="row">
    <div class="col-sm-5">
        <div class="form-group">
            <label class="font-noraml"><strong>@Html.LabelFor(model => model.Modelo.Marcas, "Marca / Fabricante")</strong></label>
            <div class="input-group">
                @Html.DropDownListFor(model => model.Modelo.MarcaId, Model.Modelo.Marcas, "Selecione", new {id = "ddlMarcaId", tabindex = "2"})
            </div>
        </div>
    </div>
</div>
<div class="row" id="divVeiculoSelecionadoId">
    <div class="col-sm-4">
        <div class="form-group">
            <label>@Html.LabelFor(model => model.Modelo)</label>
            @Html.EditorFor(model => model.Modelo.Nome, new {htmlAttributes = new {@class = "form-control", id = "TxtModeloId", PlaceHolder = "Modelo"}})
        </div>
    </div>
    <div class="col-sm-3">
        <label class="font-noraml"><strong>@Html.LabelFor(model => model.Modelo.AnoFabricacao)</strong></label>
        <div class="form-group">
            <div class="input-group">
                <select id="ddlAnoId" tabindex="2"></select>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <label class="font-noraml"><strong>@Html.LabelFor(model => model.Modelo.AnoModelo)</strong></label>
        <div class="form-group">
            <div class="input-group">
                <select id="ddlAnoModeloId" tabindex="2"></select>
            </div>
        </div>
    </div>
    <div class="col-sm-2">
        <label class="font-noraml"><strong>@Html.LabelFor(model => model.Modelo.FlagZeroKm)</strong></label>
        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-1">
            <input type="checkbox" id="checkbox-1" class="mdl-checkbox__input">
        </label>
    </div>
</div>
<div class="hr-line-dashed"></div>
<div class="row" id="divAno_Id">
    <div class="col-sm-4">
        <div class="form-group">
            <label>Chassi</label> <span class="label label-info">Opcional</span> <input type="text" placeholder="Chassi" class="form-control" id="IdChassiForm">
        </div>
    </div>
    <div class="col-sm-7">
        <label class="font-noraml"><font face="Palatino Linotype">Chassi Remarcado?</font></label>
        <div class="form-group">
            <div class="radio i-checks">
                <label> <input type="radio" value="optionChassi_Sim" name="checkChassi"> <i></i> Sim </label>
                <label> <input type="radio" checked="" value="optionChassi_Nao" name="checkChassi"> <i></i> Não </label>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-5">
        <label class="font-noraml"><strong>@Html.LabelFor(model => model.Uso)</strong></label>
        <div class="form-group">
            <div class="input-group">
                @Html.DropDownListFor(model => model.UsoId, Model.Uso, "Selecione", new { id = "ddlUsoId", tabindex = "2" })
            </div>
        </div>
    </div>
    <div class="col-sm-5">
        <label class="font-noraml"><strong>@Html.LabelFor(model => model.Imposto)</strong></label>
        <div class="form-group">
            <div class="input-group">
                @Html.DropDownListFor(model => model.ImpostoId, Model.Imposto, "Selecione", new { id = "ddlIsencaoId", tabindex = "2" })
            </div>
        </div>
    </div>
</div>
<div class="hr-line-dashed"></div>
<button type="button" class="btn btn-outline button-glow btn-primary dim" id="btnBuscarVeic">Buscar Veículo</button>
<div id="errorSummary">
    @Html.Partial("_ErrorSummary")
</div>
