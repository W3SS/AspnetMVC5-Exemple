@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@ViewBag.Title  Seguros Teste</title>

    <!-- CSS Global Compulsory -->
    <link href="~/Content/Template 2/preload.css" rel="stylesheet">

    <!-- Web Fonts -->
    <link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin'>

    <!-- CSS Header and Footer -->
    <link href="~/Content/Template 2/Bootstrap.css" rel="stylesheet">
    
    <!-- CSS Implementing Plugins -->
    <link href="~/Content/Template 2/shCore.css" rel="stylesheet">

    <!-- CSS Theme -->
    <link href="~/Content/Template 2/style-blue.css" rel="stylesheet" title="default">
    <link href="~/Content/Template 2/width-boxed.css" rel="stylesheet" title="default">

</head>

<body>

<div class="sb-site-container">
    <div class="boxed">
        <header id="header-full-top" class="hidden-xs header-full">
            <div class="container">
                <div class="header-full-title">
                    <h1 class="animated fadeInRight"><a href="index.html">Teste <span>Seguros</span></a></h1>
                    <p class="animated fadeInRight">Aplicação teste de Seguros</p>
                </div>
                <nav class="top-nav">
                    <div class="dropdown animated fadeInDown animation-delay-11">
                        @Html.Partial("_LoginPartial")
                    </div>
                </nav>
                @if (Request.IsAuthenticated)
                {
                    <nav class="back-to-top alignright">
                        <a href="~/Cotacao/Index" class="button button-small button-glow button-border button-rounded button-primary"><i class="fa fa-pencil"></i> Faça sua Cotação!</a>
                    </nav>
                }
            </div> <!-- container -->
        </header> <!-- header-full -->

        @Html.Partial("_Menu")

        <div class="container content">
            @RenderBody()
        </div><!-- End Content Part -->
        <footer id="footer">
            <p>&copy; 2017 <a href="#">Seguro Teste</a></p>
        </footer>
    </div> <!-- boxed -->
</div> <!-- sb-site -->
    <!-- JS Global Compulsory -->
    <script src="~/Scripts/Template 2/Bootstrap.js"></script>
    <!-- JS Implementing Plugins -->
    <script src="~/Scripts/Template 2/shCore.js"></script>
    <script src="~/Scripts/Template 2/shBrushXml.js"></script>
    <script src="~/Scripts/Template 2/shBrushJScript.js"></script>
    <!-- JS Page Level -->
    <script src="~/Scripts/Template 2/DropdownHover.js"></script>
    <script src="~/Scripts/Template 2/app.js"></script>
    <script src="~/Scripts/Template 2/holder.js"></script>
    <script src="~/Scripts/Template 2/home_info.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
