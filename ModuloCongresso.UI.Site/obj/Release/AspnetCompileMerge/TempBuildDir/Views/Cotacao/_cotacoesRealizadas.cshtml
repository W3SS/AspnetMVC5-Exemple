@model ModuloCongresso.Application.ViewModels.Business.ManageCotacaoViewModel

@if (Model.ListCotacoes.Count > 0)
{
    <table class="table table-bordered table-exemple">
        <thead>
        <tr>
            <th>Cotação</th>
            <th>Data de Cálculo</th>
            <th>Data de Vigência Inicial</th>
            <th class="hidden-sm">Data de Vigência Final</th>
            <th>Descrição</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody id="tableCotacoes">
        @foreach (var item in Model.ListCotacoes)
        {
            <tr id="row-@item.CotacaoId">
                <td id="item-Cotacao">@Html.DisplayFor(modelItem => item.CotacaoId)</td>
                <td id="item-Calculo">@Html.DisplayFor(modelItem => item.DataCalculo)</td>
                <td id="item-DataInicio">@Html.DisplayFor(modelItem => item.DataVigenciaInicial)</td>
                <td id="item-DataFim">@Html.DisplayFor(modelItem => item.DataVigenciaFinal)</td>
                <td class="center" id="item-Descricao">@Html.DisplayFor(modelItem => item.Descricao)</td>
                <td class="center" width="12">
                    <button class="btn btn-primary btn-xs" type="button" name="btnRecalculo" id="item-button_ReCalculo" data-id="@Html.Raw(item.CotacaoId)"><i class="fa fa-times"> Re-Calcular (Em construção)</i></button>
                    <button class="btn btn-info btn-xs" type="button" name="btnImpressao" id="item-button_Imp" data-id="@Html.Raw(item.CotacaoId)"><i class="fa fa-times"> Imprimir (Em construção)</i></button>
                    <button class="btn btn-danger btn-xs" type="button" name="btnRemover" id="item-button_EX" data-id="@Html.Raw(item.CotacaoId)"><i class="fa fa-times"> Excluir (Em construção)</i></button>
                </td>
            </tr>
        } 
        </tbody>
    </table>
}

@section Scripts {
    @Scripts.Render("~/plugins/flot")
    @Scripts.Render("~/plugins/chartJs")
    @Scripts.Render("~/plugins/peity")
    @Scripts.Render("~/Scripts/Cotacao/CotacaoScript.js")
}