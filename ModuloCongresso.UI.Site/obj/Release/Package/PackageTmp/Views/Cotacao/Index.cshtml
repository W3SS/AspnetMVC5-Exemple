@model ModuloCongresso.Application.ViewModels.Business.ManageCotacaoViewModel

@{
    Layout = "~/Views/Shared/_Layout_3.cshtml";
    ViewBag.Title = "Central de Seguros";
}

<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="container" id="contCotacaoProdutos">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <div>
                                <h1 class="font-bold no-margins">
                                    Selecione o produto
                                </h1>
                                <small>Para iniciar a cotação, selecione abaixo um dos produtos</small>
                            </div>
                            <div class="m-t-sm">

                                <div class="ibox float-e-margins">
                                    <div class="col-md-12">
                                        <div>
                                            <canvas id="lineChart" height="10"></canvas>
                                        </div>
                                        <div data-toggle="buttons" class="btn-group">
                                            <label class="btn btn-lg btn-white active">
                                                <a class="pull-left" href="#"><img class="media-object" src="../../img/Veiculos/Produtos/car_insurance.jpg" width="175" height="115" alt="image"></a>
                                                <input type="radio" id="optionAuto" name="options" value="btnAuto"> Automóvel
                                            </label>
                                        </div>
                                        <div data-toggle="buttons" class="btn-group">
                                            <label class="btn btn-lg btn-white">
                                                <a class="pull-left" href="#"><img class="media-object" src="../../img/Veiculos/Produtos/bike_insurance.jpg" width="175" height="115" alt="image"></a>
                                                <input type="radio" id="optionMoto" name="options" value="btnMoto"> Moto
                                            </label>
                                        </div>
                                        <div data-toggle="buttons" class="btn-group">
                                            <label class="btn btn-lg btn-white">
                                                <a class="pull-left" href="#"><img class="media-object" src="../../img/Veiculos/Produtos/home_insurance.jpg" width="175" height="115" alt="image"></a>
                                                <input type="radio" id="optionResidencial" name="options" value="btnResidencial"> Residencial
                                            </label>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="panel-body" id="dvtabCotacaoProdutos">
                                @* @{Html.RenderPartial("_selectedProductAutomovel", Model);}*@
                            </div>
                            <div class="panel-body" id="dvtabCotacaoRealizadas">
                                @{Html.RenderPartial("_cotacoesRealizadas", Model);}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</body>
    @section Scripts {
        @Scripts.Render("~/plugins/flot")
        @Scripts.Render("~/plugins/chartJs")
        @Scripts.Render("~/plugins/peity")
        @Scripts.Render("~/plugins/sparkline")
        @Scripts.Render("~/Scripts/Cotacao/CotacaoScript.js")
    }